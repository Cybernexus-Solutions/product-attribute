<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_order_form_partner_product" model="ir.ui.view">
        <field name="name">sale.order.form.partner_product</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='order_lines']//field[@name='order_line']/tree/field[@name='product_id']" position="attributes">
                <attribute name="domain">[('sale_ok', '=', True), '|', ('restrict_to_partner_ids', 'in', [parent.partner_id]), ('restrict_to_partner_ids', '=', False)]</attribute>
            </xpath>
            <xpath expr="//page[@name='order_lines']//field[@name='order_line']/tree/field[@name='product_template_id']" position="attributes">
                <attribute name="domain">[('sale_ok', '=', True), '|', ('restrict_to_partner_ids', 'in', [parent.partner_id]), ('restrict_to_partner_ids', '=', False)]</attribute>
            </xpath>
        </field>
    </record>
</odoo>
